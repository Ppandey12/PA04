<h1> Transactions for <%= user.username %>
</h1>

<div class="row">
  <div class="col">

    <p> Here is your list of things to do! </p>
    <div class="container">
      <div class="item_item-1">1</div>
      <div class="item_item-2">2</div>
      <div class="item_item-3">3</div>
      <div class="item_item-4">4</div>
      <div class="item_item-4">5</div>
    </div>

    <% if (show=='completed' ){%>
      <a class="btn btn-lg btn-primary" href="?show=todo">(Show tasks to do)</a>
      <% }else {%>
        <a class="btn btn-lg btn-primary" href="?show=completed">(Show completed tasks)</a>
        <%}%>
          </p>
          <ul class="list-group">
            <% items.forEach(item=> { %>
              <li class="list-group-item">
                <span class="">
                  <% if (item.completed) { %>
                    <a href="/todo/uncomplete/<%= item._id %>">
                      <i class="bi bi-check-circle-fill"></i>
                    </a>
                    <% } else {%>
                      <a href="/todo/complete/<%= item._id %>">
                        <i class="bi bi-check-circle"></i>
                      </a>
                      <%} %>
                        <a href="/todo/remove/<%=item._id %>">
                          <i class="bi bi-trash"></i>
                        </a>
                </span>
                <span class="mx-5">
                  <%= item.item %>
                </span>
                <span class="badge rounded-pill bg-danger">
                  <%= item.priority?item.priority:5 %>
                </span>
                <a href="/todo/edit/<%=item._id %>">
                  <i class="bi bi-pencil-square"></i>
                </a>

              </li>
              <br>
              <% }) %>

                <form method="post" action="todo">
                  <!-- new item: <input type="text" name="item"> -->
                  <input type="text" name="item" placeholder="description">
                  <br>
                  <input type="number" name="item" placeholder="category">
                  <br>
                  <input type="text" name="item" placeholder="amount">
                  <br>
                  <input type="date" name="item" placeholder="date">


                  <br>
                  <input type="submit" value="store">
                </form>
  </div>
