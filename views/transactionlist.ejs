<h1> Transactions for <%= user.username %>
</h1>

<div class="row">
  <div class="col">

    <p> Here is your list of things to do! </p>
    <table>
      <tr>
        <th>
          <div class="item_item-1"><a class="btn btn-primary" href="">group by category</a></div>
        </th>
        <th>
          <div class="item_item-1"><a class="btn btn-primary" href="">sort by catagory</a></div>
        </th>
        <th>
          <div class="item_item-1"><a class="btn btn-primary" href="">sort by amount</a></div>
        </th>
        <th>
          <div class="item_item-1"><a class="btn btn-primary" href="">sort by description</a></div>
        </th>
        <th>
          <div class="item_item-1"><a class="btn btn-primary" href="">sort by date</a></div>
        </th>
      </tr>
    </table>

    <!-- <% if (show=='completed' ){%>
      <a class="btn btn-lg btn-primary" href="?show=todo">(Show tasks to do)</a>
      <% }else {%>
        <a class="btn btn-lg btn-primary" href="?show=completed">(Show completed tasks)</a>
        <%}%>
          </p>
          <ul class="list-group"> -->


            <% items.forEach(item=> { %>
              <li class="list-group-item">
                <span class="">
                  <% if (item.completed) { %>
                    <a href="/todo/uncomplete/<%= item._id %>">
                      <i class="bi bi-check-circle-fill"></i>
                    </a>
                    <% } else {%>
                      <a href="/todo/complete/<%= item._id %>">
                        <i class="bi bi-check-circle"></i>
                      </a>
                      <%} %>
                        <a href="/todo/remove/<%=item._id %>">
                          <i class="bi bi-trash"></i>
                        </a>
                </span>
                <span class="mx-5">
                  <%= item.item %>
                </span>
                <span class="badge rounded-pill bg-danger">
                  <%= item.priority?item.priority:5 %>
                </span>
                <a href="/todo/edit/<%=item._id %>">
                  <i class="bi bi-pencil-square"></i>
                </a>

              </li>
              <br>
              <% }) %>
                <h1>Add A New Transaction</h1>
                <form method="post" action="todo">
                  <!-- new item: <input type="text" name="item"> -->
                  <input type="text" name="description" placeholder="description">
                  <br>
                  <input type="number" name="category" placeholder="category">
                  <br>
                  <input type="text" name="amount" placeholder="amount">
                  <br>
                  <input type="date" name="date" placeholder="date">
                  <br>
                  <input type="submit" value="store">
                </form>
  </div>
